{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('new_project') }}" class="btn btn-primary pull-right">
        Create <span class="fa fa-plus-circle"></span>
    </a>
    <h1 class="mt-3 mb-3">Liste des projets:</h1>
    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Langue d'origine</th>
        </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.name }}</td>
                <td>{{ project.language }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

